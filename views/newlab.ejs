<%- include("./partials/header")%>
    <h1>Add a new lab.</h1>
    <form action="/courses/<%= course._id %> " method="POST">
      <div class="form-group form">
            <label for="labName" class="col-sm-2 col-form-label">Lab name:</label>
            <div class="col-sm-10">
              <input type="text" name = "lab[name]" class="form-control" id="inputEmail3" required>
            </div>
      </div>
      <div class="form-group form">
            <label for="labLink" class="col-sm-2 col-form-label">Link:</label>
            <div class="col-sm-10">
              <input type="link" name = "lab[downloadLink]" class="form-control" id="inputPassword3" required>
            </div>
      </div>
      <div class="form-group form">
        <label for="labtextbox">Expected output:</label>
        <textarea name="lab[correctOutputFile]" class="form-control" id="labtextbox1" rows="3" required></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
<%- include("./partials/footer")%>